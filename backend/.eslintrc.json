{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/extensions": ["error", "ignorePackages"],
    "comma-dangle": ["error", "never"],
    "quotes": ["error", "single"],
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off"
  }
}
